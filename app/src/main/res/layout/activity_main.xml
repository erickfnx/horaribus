<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mx.unam.horaribus.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@android:color/background_dark"
        android:contentDescription="imagenprincipal"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:srcCompat="@drawable/horaribuslarge2"
        tools:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/bluetexture"
        android:contentDescription="botonderutas"
        android:onClick="menuruta"
        app:srcCompat="@drawable/rutas" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/bluetexture"
        android:contentDescription="botondereporte"
        android:onClick="reporte"
        app:srcCompat="@drawable/reporte" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/bluetexture"
        android:onClick="acerca"
        app:srcCompat="@drawable/acerca" />

</android.widget.LinearLayout>
